<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemViewer">

    <TextView
        android:id="@+id/iName"
        android:layout_width="174dp"
        android:layout_height="43dp"
        android:layout_marginEnd="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="105dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="61dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/iDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iDate"
        android:layout_width="177dp"
        android:layout_height="46dp"
        android:layout_marginEnd="103dp"
        android:layout_marginLeft="104dp"
        android:layout_marginRight="103dp"
        android:layout_marginStart="104dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/iStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iName" />

    <TextView
        android:id="@+id/iStart"
        android:layout_width="177dp"
        android:layout_height="43dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="103dp"
        android:layout_marginLeft="104dp"
        android:layout_marginRight="103dp"
        android:layout_marginStart="104dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/iEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iDate" />

    <TextView
        android:id="@+id/iEnd"
        android:layout_width="181dp"
        android:layout_height="40dp"
        android:layout_marginEnd="101dp"
        android:layout_marginLeft="102dp"
        android:layout_marginRight="101dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/iDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iStart" />

    <TextView
        android:id="@+id/iDetails"
        android:layout_width="179dp"
        android:layout_height="35dp"
        android:layout_marginEnd="101dp"
        android:layout_marginLeft="104dp"
        android:layout_marginRight="101dp"
        android:layout_marginStart="104dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iEnd" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="113dp"
        android:layout_marginEnd="149dp"
        android:layout_marginLeft="147dp"
        android:layout_marginRight="149dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="70dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iDetails" />

</android.support.constraint.ConstraintLayout>